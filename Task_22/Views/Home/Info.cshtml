@{
    Layout = "_Layout";
    ViewData["Title"] = "Информация";
}

<div class="row">
    <div class="col-4">
        <a href="~/" class="btn">
            Назад
        </a>
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="col-8">
            <ul class="list-links list-reset">
                <li class="list-links__item">
                    <a href="ChangePhotoView?id=@ViewBag.Data.Item1.ID" class="button">
                        Рудактировать фото
                    </a>
                </li>
                <li class="list-links__item">
                    <a href="DataChangesView?id=@ViewBag.Data.Item1.ID" class=" button">
                        Рудактировать запись
                    </a>
                </li>
                <li class="list-links__item">
                    <button data="@ViewBag.Data.Item1.ID" class="button-delete button">
                        Удалить
                    </button>
                </li>
            </ul>
        </div>
    }
</div>
<div class="row box-info">
    <div class="picture col-4">
        <img class="image" src=@ViewBag.Data.Item3 alt="фото человека">
    </div>
    <address class="address col-8">
        <ul class="list list-reset">
            <li class="item table__row--not-even">
                <p class="descr">
                    ID
                </p>
                <p id="recordID" class="text text--castom">
                    @ViewBag.Data.Item1.ID
                </p>
            </li>
            <li class="item table__row--even">
                <p class="descr">
                    Имя
                </p>
                <p class="text">
                    @ViewBag.Data.Item1.Name
                </p>
            </li>
            <li class="item table__row--not-even">
                <p class="descr">
                    Фамилия
                </p>
                <p class="text">
                    @ViewBag.Data.Item1.Surname
                </p>
            </li>
            <li class="item table__row--even">
                <p class="descr">
                    Отчество
                </p>
                <p class="text">
                    @ViewBag.Data.Item1.Patomic
                </p>
            </li>
            <li class="item table__row--not-even">
                <p class="descr">
                    Номер телефона
                </p>
                <p class="text">
                    @ViewBag.Data.Item2.PhoneNumber
                </p>
            </li>
            <li class="item table__row--even">
                <p class="descr">
                    Адрес
                </p>
                <p class="text">
                    @ViewBag.Data.Item2.Address
                </p>
            </li>
        </ul>
    </address>
</div>
<div class="row box-additionally">
    <div class="col-12">
        <h2 class="heading">
            Описание
        </h2>
        <p class="text text-left">
            @ViewBag.Data.Item2.Description
        </p>
    </div>
</div>

<script src="~/libs/jquery.min.js"></script>
<script src="~/js/InfoIndex.js"></script>